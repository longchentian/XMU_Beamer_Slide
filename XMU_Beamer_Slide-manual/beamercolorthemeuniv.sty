% ----------------
% Beamer Theme Color Mode Layout
% Confirmed in v1.3c(2024/04/16).
% Established in v1.3a(2022/03/16).
% Updated in v1.3c(2024/04/16).
% ----------------
% | PrimaryC | AuxiliaryC | SecondaryAuxiliaryC | IntersperseC ||
% | 主题色    | 辅助色     | 第二辅助色           | 点缀色        |
% --------------------------------------------------------------
% | NomalTextC | AlertedTextC | BackgroundC | BlockExampleC  |
% | 普通文本色  | 强调文本色    | 背景主体色   | Example 区块色 |
% ------------------------------------------------------------
% | BlockDefinitionC | BlockLemmaC | BlockConditionC |
% | Definition 区块色 | Lemma 区块色| Condition 区块色 |
% ----------------
\if\EqualOptionsBeamer{ColorDisplay}{JXred}%
	\colorlet{PrimaryC}           {univred}
	\colorlet{AuxiliaryC}         {univgrey50}
	\colorlet{SecondaryAuxiliaryC}{univgrey}
	\colorlet{IntersperseC}       {univred60}
	\colorlet{NomalTextC}         {black}
	\colorlet{AlertedTextC}       {univred90}
	\colorlet{BackgroundC}        {white}
	% \colorlet{BackgroundC}        {univyellow}
	\colorlet{BlockExampleC}      {univgrey!80!black}
	\colorlet{BlockDefinitionC}   {univblue}
	\colorlet{BlockLemmaC}        {univgreen}
	\colorlet{BlockConditionC}    {univyellow}
	\colorlet{HighlightCodeLineC} {univred10}

\else\if\EqualOptionsBeamer{ColorDisplay}{BSblue}%
	\colorlet{PrimaryC}           {univblue}
	\colorlet{AuxiliaryC}         {univgrey50}
	\colorlet{SecondaryAuxiliaryC}{univgrey}
	\colorlet{IntersperseC}       {univblue60}
	\colorlet{NomalTextC}         {black}
	\colorlet{AlertedTextC}       {univblue90}
	\colorlet{BackgroundC}        {white}
	\colorlet{BlockExampleC}      {univgrey!80!black}
	\colorlet{BlockDefinitionC}   {univred}
	\colorlet{BlockLemmaC}        {univgreen}
	\colorlet{BlockConditionC}    {univyellow}
	\colorlet{HighlightCodeLineC} {univblue10}
\else\if\EqualOptionsBeamer{ColorDisplay}{Custom}%
	\def\beamer@univ@colorprovide#1#2{%
		% #1:: colorname.
		% #2:: set color.
		\@ifundefined{\string\color@#1}{\colorlet{#1}{#2}}{}%
	}
	\beamer@univ@colorprovide{PrimaryC}           {univred}
	\beamer@univ@colorprovide{AuxiliaryC}         {univgrey50}
	\beamer@univ@colorprovide{SecondaryAuxiliaryC}{univgrey}
	\beamer@univ@colorprovide{IntersperseC}       {univred60}
	\beamer@univ@colorprovide{NomalTextC}         {black}
	\beamer@univ@colorprovide{AlertedTextC}       {univred90}
	\beamer@univ@colorprovide{BackgroundC}        {white}
	\beamer@univ@colorprovide{BlockExampleC}      {univgrey!80!black}
	\beamer@univ@colorprovide{BlockDefinitionC}   {univblue}
	\beamer@univ@colorprovide{BlockLemmaC}        {univgreen}
	\beamer@univ@colorprovide{BlockConditionC}    {univyellow}
	\beamer@univ@colorprovide{HighlightCodeLineC} {univred10}
\fi\fi\fi
